.uni-stat-tooltip-s {
  width: 160px;
  white-space: normal;
}
.uni-label-text {
  font-size: 14px;
  font-weight: bold;
  color: #555;
  margin-top: 17px;
  margin-bottom: 17px;
  margin-right: 5px;
}
.uni-stat--tab-x {
  display: flex;
  margin: 0 15px;
  white-space: nowrap;
}
.uni-stat--tab {
  display: flex;
  flex-wrap: wrap;
}
.uni-stat--tab-item {
  white-space: nowrap;
  font-size: 14px;
  color: #666;
  text-align: center;
  cursor: pointer;
  box-sizing: border-box;
  margin: 15px 0;
}
.uni-stat--tab-item-disabled {
  cursor: unset;
  opacity: 0.4;
}
.uni-stat--tab-item-line {
  margin-right: 30px;
  padding: 2px 0;
  border-bottom: 1px solid transparent;
}
.uni-stat--tab-item-line:last-child {
  margin-right: 0;
}
.uni-stat--tab-item-line-active {
  color: #2979ff;
  border-bottom: 1px solid #2979ff;
}
.uni-stat--tab-item-boldLine {
  box-sizing: border-box;
  margin-right: 30px;
  padding: 2px 0;
  border-bottom: 2px solid transparent;
}
.uni-stat--tab-item-boldLine:last-child {
  margin-right: 0;
}
.uni-stat--tab-item-boldLine-active {
  box-sizing: border-box;
  color: #2979ff;
  border-bottom: 2px solid #2979ff;
}
.uni-stat--tab-item-box {
  padding: 5px 15px;
  border: 1px solid #dcdfe6;
}
.uni-stat--tab-item-box:not(:last-child) {
  border-right-color: transparent;
}
.uni-stat--tab-item-box-active {
  box-sizing: border-box;
  border: 1px solid #2979ff !important;
}
@media screen and (max-width: 500px) {
.hide-on-phone {
    display: none;
}
.uni-stat--tab {
    flex-wrap: unset;
    overflow-x: auto !important;
}
::-webkit-scrollbar {
    display: none;
}
}